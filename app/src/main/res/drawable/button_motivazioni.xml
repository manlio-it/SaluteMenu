<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/RossoSaluteMenuOnClick" />
            <stroke android:width="2dp" android:color="@color/RossoBordoSaluteMenuOnClick" />
            <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/RossoSaluteMenu" />
            <stroke android:width="2dp" android:color="@color/RossoBordoSaluteMenu" />
            <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp"/>
        </shape>
    </item>
</selector>