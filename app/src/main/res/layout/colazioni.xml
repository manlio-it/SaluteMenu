                                app:layout_constraintWidth_percent="0.8"
                                android:gravity="center"
                                android:text="Ingredienti:\n50g di fiocchi d'avena, 200ml di latte scremato, 1 mela piccola, 1 cucchiaino di cannella, 1 cucchiaino di miele, 10g di noci tritate"
