                            android:layout_height="match_parent"
                            app:layout_constraintWidth_percent="0.525"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/constraintLayout_Corpo_ricetta_3"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/textView_ingredienti_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintWidth_percent="0.8"
                                android:gravity="center"
                                android:text="Ingredienti:\n1 fetta di pane integrale, 50g di ricotta, 1 pomodoro maturo, 2-3 foglie di basilico fresco, 1 cucchiaino di olio EVO, sale e pepe q.b."
