                            android:layout_height="match_parent"
                            app:layout_constraintWidth_percent="0.525"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/constraintLayout_Corpo_ricetta_2"
